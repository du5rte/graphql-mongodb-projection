{
  "name": "graphql-mongodb-projection",
  "description": "Uses GraphQL resolve info to generate mongoDB projections",
  "homepage": "https://github.com/du5rte/graphql-mongodb-projection#readme",
  "version": "1.1.1",
  "main": "./lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "clean": "rm -rf lib test/db && mkdir lib test/db",
    "db:start": "mongod --dbpath ./test/db/",
    "db:docker": "docker container run --rm -d -p 27017:27017 mongo:4.0.10-xenial",
    "db:import": "mongoimport --db test --collection users --drop --jsonArray test/users.json",
    "dev:build": "npm run build -- --watch",
    "dev:server": "nodemon --exec babel-node ./example/server",
    "prepublish": "npm run clean && npm run build",
    "test": "jest --config=./jest.config.js"
  },
  "author": "Duarte Monteiro <du5rtemonteiro@gmail.com> (http://du5rte.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/du5rte/graphql-mongodb-projection.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/du5rte/graphql-mongodb-projection/issues"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/node": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/runtime": "7.5.5",
    "@shelf/jest-mongodb": "1.1.0",
    "graphql": "14.4.2",
    "jest": "24.8.0",
    "mongodb": "3.3.0",
    "mongodb-memory-server": "5.1.5",
    "nodemon": "1.19.1"
  },
  "peerDependencies": {
    "graphql": ">0.8.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "core-js": "3.2.1",
    "mongoose": "5.6.9"
  }
}
